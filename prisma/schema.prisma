generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id              Int      @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String
  password        String
  favoriteCourses Course[]
}
